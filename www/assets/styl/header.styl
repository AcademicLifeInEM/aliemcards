/* Header
-----------------------------------------*/

header-height = 8rem

#header
  position: relative
  width: 100%
  height: header-height
  padding: 1rem
  background-color: light-shade
  color: dark-shade
  border-top: 2rem aliem-green solid

  h1
    display: inline-block
    font-size: 3rem
    font-weight: 700
    padding: 0 0 0 0.5em
    margin: 0

  a
    text-decoration: none
    color: dark-shade

has-header()
  padding-top: header-height

.has-header
  has-header()
