@import "skeleton"
@import "grid"
@import "colors"
@import "typography"
@import "lists"
@import "header"
@import "navmenu"
@import "breadcrumbs"
@import "cards"
@import "search"
@import "footer"
@import "images"
@import "loader"

html
  height: 100%

body
  position: relative
  min-height: 100%

.main
  padding-bottom: 25rem
  height: 100%

.content
  position: relative
  margin-top: 2rem

.drug
  color: #F06292
  font-weight: bold

.taxonomy-list
  a
    text-decoration: none
    color: dark-shade

  a:hover
    color: aliem-green

.cards-list
  li
    list-style: none
    color: dark-shade
    padding: 0.5rem 0
    font-weight: bold
    display: block

    a
      color: dark-shade
      text-decoration: none

    a:hover
      color: aliem-green

    .metadata
      display: none

.breadcrumbs
  display: none

@media (min-width: 750px)

  .cards-list
    li
      .metadata
        display: inline
        font-size: 1rem
        margin-left: 2rem

        a
          margin-right: 1rem
          background-color: light-shade
          padding: 0.5rem 1rem

  .backButton
    display: none

  .breadcrumbs
    display: block

/* Normalize
-----------------------------------------*/

div,
section,
article,
ul,
table {
  box-sizing: border-box;
}
