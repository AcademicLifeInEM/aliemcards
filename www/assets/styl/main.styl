@import "skeleton"
@import "grid"
@import "colors"
@import "typography"
@import "lists"
@import "header"
@import "nav"
@import "navmenu"
@import "breadcrumbs"
@import "cards"
@import "search"
@import "footer"

.content
  position: relative

.drug
  color: #F06292
  font-weight: bold

.cards-list,
.taxonomy-list
  li
    list-style: none
    color: dark-shade
    padding: 0.5rem 0
    font-weight: bold
    display: block

    a
      color: white
      text-decoration: none

    a:hover
      color: aliem-green

@media (min-width: 750px)
  .taxonomy-list
    ul


    li
      box-sizing: border-box
      float: left
      width: 33%
      padding: 1rem

    li:nth-child(3n+4)
      clear: left

.loader
  background-color: aliem-green
  width: 100%
  height: 100%
  padding: 3rem
  color: white
  font-size: 8rem

  i
    font-size: 10rem
    animation: spin 1s infinite

@keyframes spin {
  0% { transform: rotate(0deg) }
  100% { transform: rotate(360deg) }
}


/* Normalize
-----------------------------------------*/

div,
section,
article,
ul,
table {
  box-sizing: border-box;
}
