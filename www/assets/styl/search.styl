/* Search
-----------------------------------------------------*/

hero-height = 40rem
searchbox-height = 6rem

.searchHero
  position: relative
  width: 100%
  background-color: aliem-green
  color: white
  text-align: center
  padding: 1rem

  label
    display: inline
    position: relative
    top: 1rem

    i
      font-size: 3rem

  input
    width: 85%
    height: 4rem
    color: dark-shade
    font-size: 2rem

@media (min-width: 750px)
  .searchHero
    padding: 8rem

    input
      height: 6rem
      width: 80%

    label i
      font-size: 4rem

.searchBox
  position: relative
  width: 100%
  color: white
  background-color: aliem-green
  border-bottom: 1px solid aliem-green
  padding: 1rem
  text-align: center
  overflow: visible

  form
    margin-bottom: 0

  label
    display: inline
    padding: 0 1rem 0 0
    position: relative
    top: 0.5rem
    font-size: 2rem

  input
    margin: 0rem
    font-size: 2rem
    width: 85%
    outline: none
    color: dark-shade

  input:focus
    border: none
    outline: none


.searchList
  position: relative
  top: -2rem
  left: 2rem
  width: 85%
  margin: 1em
  padding: 2rem 0
  // background-color: light-shade
  // border: 0px solid aliem-green-shade
  // text-align: left
  // box-shadow: 0 0 1.3rem rgba(0, 0, 0, 0.3)

  li
    list-style: none
    margin-bottom: 1rem
    background-color: white
    text-align: left
    font-weight: bold
    border-radius: 2px

    a
      display: block
      padding: 1rem 2rem
      color: aliem-green
      text-decoration: none

    a:hover
      background-color: light-shade
      color: aliem-green-shade
      border-radius: 2px

@media (min-width: 750px)
  .searchbox
    padding: 1rem 12.5%

  .search-list
    margin: 2rem auto
    padding: 3rem
