/* Search
-----------------------------------------------------*/

searchbox-height = 6rem
button-width = 5rem

.search
  background: aliem-green
  display: flex
  flex-direction: column
  padding: 10px

.search__splash-text
  color: white
  font-size: 2.3rem
  text-align: center

.search__input
  text-align: center
  line-height: initial
  input
    max-width: 700px
    width: 100%

.searchList
  position: relative
  top: -2rem
  left: 2rem
  width: 85%
  margin: 1em
  padding: 2rem 0

  li
    list-style: none
    margin-bottom: 1rem
    background-color: white
    text-align: left
    font-weight: bold
    border-radius: 2px

    a
      display: block
      padding: 1rem 2rem
      color: aliem-green
      text-decoration: none

    a:hover
      background-color: light-shade
      color: aliem-green-shade
      border-radius: 2px

@media (min-width: 750px)
  .search-list
    margin: 2rem auto
    padding: 3rem
