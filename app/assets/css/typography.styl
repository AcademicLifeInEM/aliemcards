/* Typography
-----------------------------------------------------*/

body
    font-size: 1.6em
    line-height: 1.6
    font-weight: 400
    font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
    color: #222

h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: 2rem
    font-weight: 700

h1
    font-size: 3.0rem
    line-height: 1.2
    letter-spacing: -.1rem
    padding: 1rem
    background-color: $light-gray
    border-radius: 2px
    border-bottom: 5px solid $primary

h2
    font-size: 2.6rem
    line-height: 1.25
    letter-spacing: -.1rem
    border-bottom: 1px solid $dark-gray

h3
    font-size: 2.4rem
    line-height: 1.3
    letter-spacing: -.1rem

h4
    font-size: 2.4rem
    line-height: 1.35
    letter-spacing: -.08rem

h5
    font-size: 1.8rem
    line-height: 1.5
    letter-spacing: -.05rem

h6
    font-size: 1.5rem
    line-height: 1.6
    letter-spacing: 0

/* Larger than mobile */
@media (min-width: 750px)
    h1
        font-size: 4.0rem
    h2
        font-size: 3.2rem
    h3
        font-size: 2.8rem
    h4
        font-size: 2.8rem
    h5
        font-size: 2.4rem
    h6
        font-size: 1.5rem

p
    margin-top: 0
