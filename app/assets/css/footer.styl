@require 'variables'

.footer
    margin-top: 5em
    font-size: 12px
    line-height: 1em
    background-color: $darkest-gray
    padding-bottom: 5em
    a
        font-weight: bold

.footer__cc
    padding: 2rem
    width: 100%
    max-width: $container-max-width
    margin-left: auto
    margin-right: auto

.footer__cc-image
    display: flex
    padding-right: 20px
    align-items: center
    justify-content: center

.footer__cc-text
    flex: auto
    line-height: 1.4em
    color: $light-gray
    a
        color: $light-gray

.footer__links
    max-width: 500px
    margin-left: auto
    margin-right: auto
    justify-content: space-between
    font-size: 1.2em
    a
        color: $primary
