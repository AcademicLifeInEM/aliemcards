/* Footer
-----------------------------------------------------*/

.foot
    width: 100%
    color: dark-shade
    margin-top: 10rem
    font-size: 1.2rem
    img
        display: inline
        margin-right: 1rem
    .cc
        border: 1px solid light-shade
        padding: 2rem
    a
        text-decoration: none
        color: dark-shade
        font-weight: bold
    .footerLinks
        margin-top: 2rem
        text-align: center
        padding: 0
        a
            color: aliem-green
        li
            display: inline-block
            margin: 0
            padding: 0 1rem
            border-right: 1px solid light-shade
            &:last-of-type
                border: 0
