/* Spinner
-----------------------------------------------------*/

.spinner
    color: $primary-shade
    text-align: center
    padding-top: 1rem
    i
        font-size: 50px
        animation: linear spin 1s infinite

@keyframes spin
    0%
        transform: rotate(0deg)
    100%
        transform: rotate(360deg)

.spinner-hide
    opacity: 0
    height: 0
    padding: 0
    transition: all .3s linear
