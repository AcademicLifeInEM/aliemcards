/* Spinner
-----------------------------------------------------*/

.spinner
    background-color: white
    z-index: 20
    position: absolute
    width: 100%
    height: 100%
    padding: 3rem
    color: aliem-green
    font-size: 6rem
    text-align: center
    overflow: hidden

    i
        font-size: 10rem
        animation: linear spin 1s infinite

@keyframes spin
    0%
        transform: rotate(0deg)
    100%
        transform: rotate(360deg)

.spinner-hide
    opacity: 0
    height: 0
    padding: 0
    transition: all 0.3s linear
