.addthis_share
    display: flex
    padding: 0
    font-size: 0.7em

.addthis_button
    display: flex
    align-items: center
    margin-right: 10px
    padding: 5px 10px
    color: $dark-gray
    border: 1px solid $light-gray

    i
        display: inline-block
        width: 20px
        height: 20px
        background-color: $dark-gray
        margin-right: 5px

    &:hover
        color: $accent
        background-color: $light-gray

        i
            background-color: $accent


.addthis_icon_facebook
    mask: embedurl('../images/facebook.svg') no-repeat

.addthis_icon_twitter
    mask: embedurl('../images/twitter.svg') no-repeat

.addthis_icon_email
    mask: embedurl('../images/envelope.svg') no-repeat
