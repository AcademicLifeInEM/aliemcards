// Place your settings in this file to overwrite default and user settings.
{
  "lcov.path": "coverage/remapped/lcov.info",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "tslint.nodePath": "./node_modules/.bin/tslint",
  "files.associations": {
    "deploy": "shellscript",
    ".stylintrc": "json",
    ".prettierrc": "yaml"
  },
  "remark.format": {
    "rules": {
      "emphasis": "_",
      "gfm": true,
      "entities": true,
      "incrementListMarker": true,
      "listItemIndent ": "1",
      "strong": "*"
    }
  },
  "prettier.tabWidth": 2
}
